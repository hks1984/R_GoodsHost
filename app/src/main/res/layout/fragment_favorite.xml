<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_500"
    tools:context=".fragment.favorite.FavoriteFragment"
    >


    <LinearLayout
        android:id="@+id/favorite_LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >


        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            >

        </ImageView>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:src="@drawable/logo_white">

        </ImageView>

        <ImageView
            android:id="@+id/dummy"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            >

        </ImageView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/LinearLayout_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/share_round_list"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/gmall_top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/TextBlack.mediumStyle"
                    android:textStyle="bold"
                    android:text="@string/logo_title"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/favorite_all_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBlack.largeStyle"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="@string/favorite_all_product"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_500"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>
