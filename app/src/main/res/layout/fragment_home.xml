<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_500">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/LinearLayout1"
            app:layout_constraintBottom_toBottomOf="@+id/LinearLayout1"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/logo_black" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/LinearLayout1"
            app:layout_constraintBottom_toBottomOf="@+id/LinearLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/bell" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bio_scroll"
        android:fillViewport="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bestSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/sale"
                android:adjustViewBounds="true"
                />


            <LinearLayout
                android:id="@+id/LinearLayout_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/share_round_list"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/gmall_top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/TextBlack.mediumStyle"
                    android:textStyle="bold"
                    android:text="믿고 사는"
                    android:textColor="@color/personal_2"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/gmall_top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBlack.largeStyle"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="인기 상품 픽"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    />
                <!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white_500"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>



                <!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_100" />

                </LinearLayout>

                <TextView
                    android:id="@+id/gmall_top_totalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBlack.largeStyle"
                    android:textStyle="bold"
                    android:text="모든 상품 보기 >"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>
        <!--    </ScrollView>-->
    </androidx.core.widget.NestedScrollView>





    <!-- 다른 뷰와 요소들도 비슷한 방식으로 추가하고, 서로간의 제약 조건을 정의해야 합니다. -->

</androidx.constraintlayout.widget.ConstraintLayout>
