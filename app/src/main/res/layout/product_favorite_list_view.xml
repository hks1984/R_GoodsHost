<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_round_list"
    android:layout_marginBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <ImageView
        android:id="@+id/imagew"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/persent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/blue_500"
            android:text=""
            style="@style/TextBlack.mediumStyle"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginBottom="5dp"
            style="@style/TextBlack.mediumStyle"
            android:textStyle="bold"
            android:maxLines="3"
            android:ellipsize="end"
             />

        <TextView
            android:id="@+id/price_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginBottom="5dp"
            style="@style/TextBlack.mediumStyle"
            android:textStyle="bold"
             />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/favorite_hope_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,000"
                style="@style/TextBlack.smallStyle"
                android:layout_gravity="center"
                android:background="@color/gray_500"
                />

            <TextView
                android:id="@+id/favorite_hope_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠팡배송"
                style="@style/TextBlack.smallStyle"
                android:layout_gravity="center"
                android:background="@color/gray_500"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_favorite"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/favorite_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_favorite_border_24"
            />

        <ImageView
            android:id="@+id/favorite_alarm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_notifications_24"
            />


    </LinearLayout>


</LinearLayout>