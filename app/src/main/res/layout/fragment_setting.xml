<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_500">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="설정"
            style="@style/TextBlack.mediumStyle"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/setting_info_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBlack.mediumStyle"
        android:text="안녕하세요."
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/setting_info_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBlack.titleStyle"
        android:text="착한 악어"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_info_hello"
        app:layout_constraintLeft_toLeftOf="parent"
        />

<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:src="@drawable/baseline_mode_edit_24_black"-->
<!--        app:layout_constraintLeft_toRightOf="@id/setting_info_nick"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/setting_info_nick"-->
<!--        app:layout_constraintTop_toTopOf="@id/setting_info_nick"-->
<!--        />-->


    <TextView
        android:id="@+id/setting_info_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBlack.smallStyle"
        android:textColor="@color/gray_500"
        android:text="abc123@naver.com"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_info_nick"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <LinearLayout
        android:id="@+id/setting_easy_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:text="button1"
        android:background="@drawable/share_login_button"
        app:layout_constraintTop_toTopOf="@+id/setting_info_hello"
        app:layout_constraintBottom_toBottomOf="@+id/setting_info_social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextBlack.smallStyle"
            android:textColor="@color/black_500"
            android:textStyle="bold"
            android:text="간편\n로그인"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/baseline_login_24_black"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_info_social"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_100" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_title_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_line_1"
        >

        <TextView
            style="@style/TextBlack.titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="@string/setting_title_default"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_use_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_title_default"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="left"
            android:text="@string/setting_use_info"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/baseline_chevron_right_24_black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_use_swich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_use_info"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="left"
            android:text="@string/setting_use_alarm"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alarm_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="4"
            android:gravity="center"
            android:thumb="@drawable/shape_switch_thumb"
            app:switchMinWidth="50dp"
            android:paddingRight="15dp"
            app:track="@drawable/shape_swich_selector" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_use_swich"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_100" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_title_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_line_2"
        >

        <TextView
            style="@style/TextBlack.titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="@string/setting_title_support"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_title_support"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="left"
            android:text="@string/setting_privacy_text"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/baseline_chevron_right_24_black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_termsOfUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_privacy"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="left"
            android:text="@string/setting_termsOfUse_text"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:src="@drawable/baseline_chevron_right_24_black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_acc_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_termsOfUse"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textColor="@color/personal"
            android:gravity="left"
            android:text="@string/setting_acc_delete"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:src="@drawable/baseline_chevron_right_24_black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_acc_delete"
        >

        <TextView
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="left"
            android:text="@string/setting_app_version"
             />

        <TextView
            android:id="@+id/app_version"
            style="@style/TextBlack.largeStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="1.0"
             />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
