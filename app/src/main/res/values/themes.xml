<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.R_GoodsHost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.R_GoodsHost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextBlack.smallStyle" parent="android:TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.mediumStyle" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.largeStyle" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextWhite.smallStyle" parent="android:TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.mediumStyle" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.largeStyle" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.R_GoodsHost" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


</resources>