<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.R_GoodsHost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowDisablePreview">true</item>-->
<!--        <item name="android:windowBackground">@null</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="Theme.R_GoodsHost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="whiteStatus" parent="@style/Theme.R_GoodsHost">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white_500</item>
        <!-- 배경색이 밝으면 windowLightStatusBar 값을 true로, 어두우면 false 로 설정해야한다. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Transparent" parent="@style/Theme.R_GoodsHost">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextBlack.smallStyle" parent="android:TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.mediumStyle" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.largeStyle" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.bigLargeStyle" parent="android:TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextBlack.titleStyle" parent="android:TextAppearance">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="TextWhite.smallStyle" parent="android:TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.mediumStyle" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.largeStyle" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.bigLargeStyle" parent="android:TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextWhite.titleStyle" parent="android:TextAppearance">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/share_round_bottom_sheet_registration</item>
    </style>





</resources>